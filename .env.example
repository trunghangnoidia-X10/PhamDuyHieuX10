# Auth Mode - Set to "true" to require authentication
# Set to "false" to bypass auth (for development/testing)
NEXT_PUBLIC_AUTH_REQUIRED=true

# App URL (for payment callbacks)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API Key (required for chatbot)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# VNPay Configuration (for payment integration)
# Register at: https://vnpay.vn/dang-ky-doanh-nghiep
VNPAY_TMN_CODE=your_vnpay_terminal_code
VNPAY_HASH_SECRET=your_vnpay_secret_key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# MoMo Configuration (for payment integration)
# Register at: https://business.momo.vn
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
